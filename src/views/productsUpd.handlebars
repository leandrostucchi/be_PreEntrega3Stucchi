<h1>Productos Actualizar</h1>
<form id="productFormUpd" action="/updProduct"  method="post">
    <table>
        <thead>
        </thead>
        <tbody>
            <tr class="border-0">
                <td><label for="productTittle">Titulo:</label></td>
                <td><input type="text" id="productTittle1" name="productTittle" value="{{products.title}}" > </td>
            </tr>
            <tr >
                <td><label for="productDescription">Nombre:</label></td>
                <td><input type="text" id="productDescription1" name="productDescription" value="{{products.description}}" ></td>
            </tr>
            <tr class="border-0">
                <td><label for="productPrice" class="col-sm-2 col-form-label">Precio:</label></td>
                <td><input type="number"  id="productPrice1" name="productPrice" value="{{products.price}}" ></td>
            </tr>
            <tr class="border-0">
                <td><label for="productCode">Codigo:</label></td>
                <td><input type="text" id="productCode1" name="productCode" value="{{products.code}}" ></td>
            </tr>
            <tr class="border-0">
                <td><label for="productStock">Stock:</label></td>
                <td><input type="number" id="productStock1" name="productStock" value="{{products.stock}}" ></td>
            </tr>
        </tbody>
        <button type="submit" class="btn btn-success" id="updProductBtn">Actualizar Producto</button>
    </table>
</form>
